@page "/simple-fetching/get-multiple"
@using DISCOSweb_Sdk.Models.ResponseModels.DiscosObjects
@using DISCOSweb_Sdk.Models.ResponseModels
@using System.Reflection

<MudSelect T="Type" ValueChanged="UpdateModel">
    @foreach(Type t in typeof(DiscosObject).Assembly.GetTypes().Where(t => t.IsAssignableTo(typeof(DiscosModelBase)) && t != typeof(DiscosModelBase)))
    {
        <MudSelectItem Value="t" ></MudSelectItem>
    }
</MudSelect>
<MudTable Items="@Elements" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading" LoadingProgressColor="Color.Info">
    <HeaderContent>
        @foreach (PropertyInfo prop in TargetType.GetType().GetProperties())
        {
            <MudTh>@prop.Name</MudTh>
        }
    </HeaderContent>
    <RowTemplate>
        @* <MudTd DataLabel="Nr">@context.Number</MudTd> *@
        @* <MudTd DataLabel="Sign">@context.Sign</MudTd> *@
        @* <MudTd DataLabel="Name">@context.Name</MudTd> *@
        @* <MudTd DataLabel="Position" HideSmall="_hidePosition">@context.Position</MudTd> *@
        @* <MudTd DataLabel="Molar mass">@context.Molar</MudTd> *@
    </RowTemplate>
</MudTable>
